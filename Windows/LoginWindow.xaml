<Window x:Class="TheatreManagerApplication.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheatreManagerApplication"
        mc:Ignorable="d"
        Title="LoginWindow" SizeToContent="WidthAndHeight">
    <Grid Background="#FFC8FFA4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,20,40,20">
            <TextBlock Text="Login using your credentials." FontWeight="Bold" FontSize="16px" Margin="10" TextAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="10,10,10,5" >
                <TextBlock Text="Username: " FontWeight="Bold" FontSize="12px" Padding="5"></TextBlock>
                <TextBox x:Name="Test" Text=""  Background="#FFDBFFC3" BorderBrush="#BF323232" Padding="5" Width="150px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,5,10,10" >
                <TextBlock Text="Password:  " FontWeight="Bold" FontSize="12px" Padding="5"></TextBlock>
                <TextBox Text="" Background="#FFDBFFC3" BorderBrush="#BF323232" Padding="5" Width="150px"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
